<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AddressBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
    <link href="~/css/Theme.css" rel="stylesheet" />


</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white py-3 shadow-sm">

                <div id="navbarContent" class="collapse navbar-collapse">
                    <ul class="navbar-nav mx-auto">
                        <li asp-area="" asp-controller="Contacts" asp-action="Create" class="nav-link font-weight-bold text-uppercase"><a class="nav-link text-dark" asp-area="" asp-controller="Contacts" asp-action="Create">New Contact</a></li>
                        <li asp-area="" asp-controller="Contacts" asp-action="Index" class="nav-link font-weight-bold text-uppercase"><a class="nav-link text-dark" asp-area="" asp-controller="Contacts" asp-action="Index">Contacts</a></li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    <script src="~/js/datatable.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
